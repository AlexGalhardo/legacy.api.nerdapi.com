{
	"name": "api.nerdapi.com",
	"scripts": {
		"build": "bunx @nestjs/cli build",
		"start": "bunx nest start",
		"dev": "nest start --watch",
		"start:debug": "bunx nest start --debug --watch",
		"start:prod": "bun dist/src/main",
		"format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
		"prepare": "husky install",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:integration": "jest --runInBand --detectOpenHandles --forceExit --config ./tests/integration/jest-integrations-test.json",
		"prisma:migrate": "bunx prisma migrate dev",
		"prisma:generate": "bunx prisma generate",
		"prisma:push": "bunx prisma db push",
		"prisma:studio": "bunx prisma studio",
		"prisma:seed": "bunx prisma db seed",
		"prisma:format": "bunx prisma format"
	},
	"prisma": {
		"seed": "ts-node --transpile-only --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
	},
	"dependencies": {
		"@nestjs/common": "^10.3.9",
		"@nestjs/config": "^3.2.2",
		"@nestjs/core": "^10.3.9",
		"@nestjs/platform-express": "^10.3.9",
		"@nestjs/swagger": "^7.3.1",
		"@prisma/client": "^5.15.0",
		"bcrypt": "^5.1.1",
		"class-validator": "0.14.1",
		"google-auth-library": "^9.10.0",
		"jest-mock-extended": "^3.0.7",
		"jsonwebtoken": "^9.0.2",
		"nodemailer": "^6.9.13",
		"reflect-metadata": "^0.2.2",
		"remark-lint": "^10.0.0",
		"rxjs": "^7.8.1",
		"string-similarity": "^4.0.4",
		"stripe": "^15.10.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.3.2",
		"@nestjs/schematics": "^10.1.1",
		"@nestjs/testing": "^10.3.9",
		"@swc/cli": "^0.3.12",
		"@swc/core": "^1.5.25",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.12",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/node": "^20.14.2",
		"@types/nodemailer": "^6.4.15",
		"@types/string-similarity": "^4.0.2",
		"@types/supertest": "^6.0.2",
		"husky": "^9.0.11",
		"jest": "^29.7.0",
		"prettier": "^3.3.1",
		"prisma": "^5.15.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.1.4",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.4.5"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "./",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"modulePaths": [
			"<rootDir>"
		]
	}
}